{
  "name": "fortellis-spec-validator",
  "displayName": "Fortellis Spec Validator",
  "description": "Validate fortellis specifications live in your editor.",
  "version": "0.0.1",
  "publisher": "fortellis",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.validateSpec",
        "title": "Validate",
        "category": "Fortellis Spec"
      },
      {
        "command": "extension.previewSpec",
        "title": "Preview",
        "category": "Fortellis Spec"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.validateSpec",
          "when": "editorLangId == yaml"
        },
        {
          "command": "extension.previewSpec",
          "when": "editorLangId == yaml"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "eslint": "^4.11.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "@fortellis/spec-validator": "^1.0.2",
    "@stoplight/yaml": "^3.5.0",
    "json-schema-ref-parser": "^7.1.3"
  }
}
