{
  "name": "fortellis-spec-validator",
  "displayName": "Fortellis Spec Validator",
  "description": "Validate fortellis specifications live in your editor.",
  "version": "0.0.1",
  "publisher": "fortellis",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:fortellis-spec-validator-view",
    "onLanguage:yaml"
  ],
  "main": "./src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.validateSpec",
        "title": "Validate",
        "category": "Fortellis Spec Validator",
        "icon": {
          "light": "resources/icons/light/refresh.svg",
          "dark": "resources/icons/dark/refresh.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension.validateSpec",
          "when": "view == fortellis-spec-validator-view",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.validateSpec",
          "when": "editorLangId == yaml"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fortellis-spec-validator",
          "title": "Fortellis Spec Validation",
          "icon": "media/dep.svg"
        }
      ]
    },
    "views": {
      "fortellis-spec-validator": [
        {
          "id": "fortellis-spec-validator-view",
          "name": ""
        }
      ],
      "explorer": [
        {
          "id": "fortellis-spec-validator-view",
          "name": "Fortellis Spec Validation"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "eslint": "^4.11.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "@fortellis/spec-validator": "^1.0.2"
  }
}
